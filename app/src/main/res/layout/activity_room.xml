<?xml version="1.0" encoding="utf-8"?>
<!-- splitMotionEvents 는 멀티터치 옵션 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context="com.sharedlecturenote.RoomActivity">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:layout_gravity="center"
    android:id="@+id/overlayer">

    <com.github.barteksc.pdfviewer.PDFView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:id="@+id/pdfView">
    </com.github.barteksc.pdfviewer.PDFView>

    <com.sharedlecturenote.DrawView
        android:id="@+id/otherCanvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000">
    </com.sharedlecturenote.DrawView>

    <com.sharedlecturenote.DrawView
        android:id="@+id/canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000">
    </com.sharedlecturenote.DrawView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/voiceList">
        </ListView>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="0dp"
            android:textSize="35sp"
            android:layout_alignParentBottom="true"
            android:text="@string/menu"
            android:layout_margin="0dp"
            android:id="@+id/menuButton"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/mic_on"
            android:id="@+id/micOnOff"
            android:layout_above="@+id/menuButton"
            android:visibility="gone" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/back"
            android:padding="5dp"
            android:id="@+id/backButton"
            android:layout_above="@id/micOnOff"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/pageControl">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/prev"
                android:padding="5dp"
                android:id="@+id/prevButton"
                android:layout_margin="5dp"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pageView"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:textSize="25sp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/next"
                android:padding="5dp"
                android:id="@+id/nextButton"
                android:layout_margin="5dp"
                android:visibility="gone"/>

        </LinearLayout>


    </RelativeLayout>

</FrameLayout>

    <LinearLayout
        android:id="@+id/menues"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="7"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/colorPick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/colorpick"
                android:layout_margin="10dp">

            </ImageView>

            <ImageView
                android:id="@+id/pen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/penselect"
                android:layout_margin="10dp">

            </ImageView>

            <ImageView
                android:id="@+id/textInsert"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/text"
                android:layout_margin="10dp">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="참여자"
                android:id="@+id/textView"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:gravity="center" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/userlist"
                android:layout_gravity="top" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
